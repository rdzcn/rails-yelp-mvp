<div class="container text-center">
  <div class="row">
    <div class="form-container">
    <%= simple_form_for @restaurant do |f| %>
    <div class="col-xs-6">
      <%= f.input :name, label: false, placeholder: 'Restaurant name', error: 'Name is mandatory, please specify one' %>
    </div>
    <div class="col-xs-9">
      <%= f.input :category, label: false, placeholder: 'Italian, Chinese, Japanese, Belgian or French', error: 'Only given categories please' %>
    </div>
    <div class="col-xs-9">
      <%= f.input :address, label: false, placeholder: 'Restaurant address', error: 'Mandatory field' %>
    </div>
    <div class="col-xs-9">
      <%= f.input :phone_number, label: false, placeholder: 'Phone number' %>
    </div>
    <div class="col-xs-4">
    <%= f.submit "Add restaurant", class: "btn btn-primary" %>
    </div>
    <% end %>
    </div>
  </div>
</div>