<div class="container text-center">
  <div class="row">
    <div class="form-container">
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="col-xs-12">
      <%= f.input :content, label: false, class: "comment-area", placeholder: 'Your valuable comments...', error: 'Mandatory field' %>
    </div>
    <div class="col-xs-9">
      <%= f.input :rating, label: false, placeholder: '1 star - 5 stars', error: 'Only given range please' %>
    </div>
    <div class="col-xs-4">
    <%= f.submit "Publish Review", class: "btn btn-primary" %>
    </div>
    <% end %>
    </div>
  </div>
</div>

